<HBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.quy.controllers.user.BurnInController">
   <children>
      <VBox alignment="TOP_CENTER" HBox.hgrow="NEVER">
