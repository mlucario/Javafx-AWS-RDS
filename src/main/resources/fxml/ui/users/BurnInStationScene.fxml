               </children>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="TOP_CENTER">
               <children>
                  <JFXTextArea fx:id="txtNote" prefRowCount="3" promptText="Note" HBox.hgrow="NEVER">
                     <font>
                        <Font name="Roboto Bold Italic" size="17.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </JFXTextArea>
               </children>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </HBox>
            <JFXButton fx:id="btnAdd" onAction="#addToBurnInList" prefHeight="60.0" prefWidth="300.0" ripplerFill="#105c82" style="-fx-font-size: 2em; -fx-font-family: Roboto; -fx-font-weight: Bold; -fx-background-color: #2B98C6; -fx-background-radius: 100px;" text="Add" textFill="WHITE" VBox.vgrow="NEVER">
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </JFXButton>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="183.0">
               <children>
                  <Label text="Total Added: " textFill="RED">
