<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.quy.controllers.user.RepairStationController">
	<children>
		<StackPane alignment="TOP_CENTER" layoutX="10.0"
			layoutY="45.0" prefWidth="700.0" AnchorPane.bottomAnchor="5.0"
			AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0"
			AnchorPane.topAnchor="5.0">
			<children>
				<HBox alignment="TOP_CENTER" StackPane.alignment="CENTER">
					<children>
						<VBox alignment="TOP_CENTER">
							<children>
								<HBox alignment="CENTER">
									<children>
										<JFXTextField fx:id="txtControllerBarcode"
											focusColor="#105c82" labelFloat="true"
											onKeyReleased="#keyPressValidate" prefHeight="60.0"
											prefWidth="400.0" promptText="Enter Controller Barcode"
											style="-fx-font-size: 2em; -fx-font-family: Roboto; -fx-font-weight: Bold;"
											unFocusColor="#50514f">
											<HBox.margin>
												<Insets />
											</HBox.margin>
										</JFXTextField>
										<FontAwesomeIconView fill="#105c82"
											glyphName="BARCODE" size="55" />
									</children>
									<VBox.margin>
										<Insets top="30.0" />
									</VBox.margin>
									<padding>
										<Insets bottom="10.0" left="10.0" right="10.0"
											top="10.0" />
									</padding>
								</HBox>
								<JFXTextArea fx:id="txtRepairStep"
									promptText="Enter Repair Steps If Have">
									<VBox.margin>
										<Insets bottom="10.0" left="10.0" right="10.0"
											top="10.0" />
									</VBox.margin>
									<font>
										<Font name="Roboto" size="17.0" />
									</font>
									<padding>
										<Insets bottom="20.0" left="20.0" right="20.0"
											top="20.0" />
									</padding>
								</JFXTextArea>
								<HBox alignment="CENTER" prefHeight="100.0"
									prefWidth="200.0">
									<children>
										<JFXButton fx:id="btnRepair" alignment="CENTER"
											onAction="#repairAction" prefHeight="60.0" prefWidth="150.0"
											ripplerFill="#105c82"
											style="-fx-font-size: 2em; -fx-font-family: Roboto; -fx-font-weight: Bold; -fx-background-color: #2ecc71; -fx-background-radius: 100px;"
											text="REPAIR" textFill="WHITE">
											<padding>
												<Insets bottom="10.0" left="10.0" right="10.0"
													top="10.0" />
											</padding>
											<HBox.margin>
												<Insets right="25.0" />
											</HBox.margin>
										</JFXButton>
										<JFXButton fx:id="btnUnrepairable"
											alignment="CENTER" layoutX="10.0" layoutY="10.0"
											onAction="#canNotRepair" prefHeight="60.0" prefWidth="207.0"
											ripplerFill="#105c82"
											style="-fx-font-size: 2em; -fx-font-family: Roboto; -fx-font-weight: Bold; -fx-background-color: #34495e; -fx-background-radius: 100px;"
											text="UNREPAIRABLE" textFill="WHITE">
											<padding>
												<Insets bottom="10.0" left="10.0" right="10.0"
													top="10.0" />
											</padding>
											<HBox.margin>
												<Insets left="25.0" />
											</HBox.margin>
										</JFXButton>
									</children>
									<VBox.margin>
										<Insets top="10.0" />
									</VBox.margin>
								</HBox>
							</children>
						</VBox>
						<VBox alignment="TOP_CENTER" prefHeight="477.0"
							prefWidth="188.0">
							<HBox.margin>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
							</HBox.margin>
							<children>
								<Label text="Symptoms Of Fail" textFill="#1500ff">
									<font>
										<Font name="Roboto Medium" size="19.0" />
									</font>
								</Label>
								<JFXTextArea fx:id="txtSymptoms">
									<VBox.margin>
										<Insets top="85.0" />
									</VBox.margin>
									<font>
										<Font name="Roboto" size="17.0" />
									</font>
									<padding>
										<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
									</padding>
								</JFXTextArea>
							</children>
						</VBox>
					</children>
				</HBox>
			</children>
		</StackPane>
	</children>
	<padding>
		<Insets top="20.0" />
	</padding>
</AnchorPane>
